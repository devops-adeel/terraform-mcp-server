{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": ".",
      "moduleResolution": "NodeNext",
      "module": "NodeNext",
      "target": "ES2022",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": [
      "./*.ts",
      "./resources/**/*.ts",
      "./utils/**/*.ts",
      "./tools/**/*.ts",
      "./tests/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }